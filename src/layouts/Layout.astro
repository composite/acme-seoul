---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link
			rel="stylesheet"
			href="https://unpkg.com/@kfonts/nanum-barun-gothic/index.css"
		/>
	</head>
	<body>
		<slot />
	</body>
</html>
<style>
	:global(html, body) {
		height: 100vh;
		margin: 0;
		padding: 0;
	}
</style>
